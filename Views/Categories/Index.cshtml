@model IEnumerable<ContactMVC.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="row pe-5">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-secondary rounded-pill" asp-controller="Categories" asp-action="Create">Create New</a>
    </div>
</div>
<div class="row p-5">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        My Categories
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(Category category in Model){                
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td class="d-flex justify-content-end">
                        <a class="me-3 editIcons text-secondary" asp-action="Edit" asp-route-id="@category.Id"><i class="bi bi-pencil-fill"></i></a>
                        <a class="me-3 editIcons" asp-action="EmailCategory" asp-route-id="@category.Id"><i class="bi bi-envelope-fill"></i></a>
                        <a class="me-3 editIcons text-danger" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-trash-fill "></i></a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <!-- Sweet Alerts -->
<script>
    let message = '@(ViewBag.SwalMessage)';

    if(!message.includes("Error") && message != '') {
        Swal.fire({
            backdrop: false,
            icon: 'success',
            title: message,
            showConfirmButton: true
        })
    }
    else if (message.includes("Error")) {
        Swall.fire({
            backdrop: false,
            icon: 'error',
            title: 'Oops...',
            text: message
        })
    }
 
</script>
}
